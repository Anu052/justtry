extends base.pug 

block scripts  
    script(src='/static/index.js')
block style 
    style
      include ../static/style.css
      include ../static/contact.css
      
block content
    h1 Application Form
    form(action="/contact" method='post')
        input(type="text" class="name" name="name" placeholder="enter the full name" )
        input(type="text" class="name" name="age" placeholder="enter the age" )
        input(type="number" class="name" name="number" placeholder="enter the contact number" ) 
        input(type="email" class="name" name="email" placeholder="enter the email" ) 
        input(type="password" class="name" name="password" placeholder="enter the password" ) 
        input(type="submit" id="sys")